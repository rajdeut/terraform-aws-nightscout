# Nightscout Configuration Example
# Copy this file to nightscout.env and update the values for your deployment
# Lines starting with # are comments and will be ignored

# REQUIRED: Security settings
API_SECRET="your-secure-api-secret-here-minimum-12-characters"

# REQUIRED: Database connection
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/nightscout?retryWrites=true&w=majority"

# Optional: Custom site settings
BASE_URL="https://nightscout.yourdomain.com"
CUSTOM_TITLE="Nightscout"

# Features to enable (space-separated list)
ENABLE="careportal basal dbsize rawbg iob maker bridge loop pump openaps"

# Display settings
TIME_FORMAT="24"
NIGHT_MODE="off"
SHOW_RAWBG="never"
THEME="default"

# Alarm settings
ALARM_TYPES="simple"
ALARM_URGENT_HIGH="on"
ALARM_HIGH="on"
ALARM_LOW="on"
ALARM_URGENT_LOW="on"

# Blood glucose thresholds (mg/dL)
BG_HIGH="260"
BG_TARGET_TOP="180"
BG_TARGET_BOTTOM="80"
BG_LOW="55"

# Display units: "mg/dl" or "mmol"
DISPLAY_UNITS="mg/dl"

# Optional: Pushover notifications
# PUSHOVER_API_TOKEN="your-pushover-api-token"
# PUSHOVER_USER_KEY="your-pushover-user-key"

# Optional: IFTTT/Maker integration
# MAKER_KEY="your-maker-key"

# Optional: Pump settings
# PUMP_FIELDS="battery reservoir clock status"
# PUMP_URGENT_BATT_P="25"
# PUMP_URGENT_RES="10"

# Optional: Cannula and sensor age alerts
# CAGE_ENABLE_ALERTS="true"
# CAGE_URGENT="72"
# CAGE_WARN="48"
# SAGE_ENABLE_ALERTS="true"
# SAGE_URGENT="168"
# SAGE_WARN="140"